{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "dependencies"
  ],
  "ignorePaths": [
    "**/xtask/**"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^riscv"
      ],
      "groupName": "riscv"
    }
  ]
}